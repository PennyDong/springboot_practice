package com.example.demo.dao;

import java.util.List;

import org.apache.ibatis.annotations.Insert;
import org.apache.ibatis.annotations.Mapper;
import org.apache.ibatis.annotations.Select;

import com.example.demo.pojo.chat;
import com.example.demo.pojo.member;

@Mapper
public interface chatMapper {
	
	//create
	
	@Insert("insert into chat(name,subject,content)"
			+"values(#{name},#{subject},#{context})")
	void chatAdd(chat c);
	
	
	
	//read
	@Select("select * from chat")
	List<chat> chatList(String name,String subject,String content);
	
	@Select("select * from chat where id=#{id}")
	chat queryMember(int id);
	
	
	
	//update
	
	
	
	//delete
}
